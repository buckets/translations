{
  "compilerOptions": {
    "target": "es2015",
    "module": "umd",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react",
    "listEmittedFiles": false
  },
  "include": [
    "langs/**/*.ts",
    "langs/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
